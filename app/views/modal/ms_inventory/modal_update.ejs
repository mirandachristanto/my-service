<!-- Modal UPDATE -->
<div class="modal fade" id="updateListSlider" tabindex="-1" role="dialog" aria-labelledby="edit_appsTitle"
	aria-hidden="true">
	<div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="updateListSliderTitle">Inventory - Add/Edit</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form id="updateSliderForm">
					<input type="hidden" id="edit_id_slider" name="id_inventory" />
					<div class="form-group">
						<label>Position: </label>
						<input type="number" class="form-control" id="update_slider_position" name="position"
							placeholder="Position"/>
					</div>
					<div class="form-group">
						<label for="title">Reference code: </label>
						<input type="text" class="form-control" id="edit_code" name="codeReference" placeholder="Code"
							required />
					</div>
					<div class="form-group">
						<label for="title">Product Name: </label>
						<input type="text" class="form-control" id="edit_name" name="inventory_name" placeholder="Name"
							required />
					</div>
					<div class="form-group">
						<label for="picture">Product Picture</label>
						<div class="custom-file">
							<input type="file" class="form-control-file upload-image" id="editPicture" name="picture"
								accept="image/*" for="apps_icon" onchange="loadOutput(event)" />
							<label class="custom-file-label" for="editPicture">Choose file</label>
						</div>
					</div>
					<div class="form-group">
						<label class="update_label col-sm-4" for="previewUpdate"></label>
						<img src="" id="show_edit_pict" class="col-sm-3" onerror="this.src='/img/noimage.png'"
							style="max-width: 250px;max-height: 150px;object-fit: contain;">
					</div>
					<div class="form-group">
						<label for="title">Product Price: </label>
						<input type="text" class="form-control" id="edit_price" name="inventory_price" placeholder="Price"
							required />
					</div>
					<div class="form-group">
						<label for="title">Product Stock: </label>
						<input type="number" class="form-control" id="edit_amount" name="amount" placeholder="Stock"
							required />
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button id="updateSliderButton" type="button" class="btn btn-primary">Save</button>
			</div>
		</div>
	</div>
</div>