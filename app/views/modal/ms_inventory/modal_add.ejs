<!-- Modal ADD -->
<div class="modal fade" id="addHSlider" tabindex="-1" role="dialog" aria-labelledby="add_appsTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="addHSliderTitle">Inventory - Add</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form id="formAddSlider" action="/panels/ms_inventory/add" enctype="multipart/form-data" method="post">
					<div class="form-group">
						<input type="hidden" class="form-control" name="position" placeholder="Position" required />
					</div>
					<div class="form-group">
						<label for="title">Product name: </label>
						<input type="text" class="form-control" name="inventory_name" placeholder="Name" required />
					</div>
					<div class="form-group">
						<label for="title">Reference code: </label>
						<input type="text" class="form-control" name="codeReference" placeholder="Code"
							required />
					</div>
					<div class="form-group">
						<label for="picture">Picture</label>
						<div class="custom-file">
							<input type="file" class="form-control-file upload-image" id="add_slider_icon" name="picture"
								accept="image/*" onchange="loadIcon(event)" required />
							<label class="custom-file-label" for="add_slider_icon">Choose file</label>
						</div>
					</div>
					<div class="form-group">
						<label class="add_label col-sm-4" for="previewAdd"></label>
						<img src="" id="show_add_slider" class="col-sm-3" onerror="this.src='/img/noimage.png'"
							style="max-width: 250px;max-height: 150px;object-fit: contain;">
					</div>
					<div class="form-group">
						<label for="title">Product Price: </label>
						<input type="text" class="form-control"  name="inventory_price" placeholder="Price"
							required />
					</div>
					<div class="form-group">
						<label for="title">Product Stock: </label>
						<input type="number" class="form-control" name="amount" placeholder="Stock"
							required />
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button id="buttonAddSlider" type="submit" class="btn btn-primary">Save</button>
			</div>
		</div>
	</div>
</div>